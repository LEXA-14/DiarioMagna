@page "/admin"
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Administrador")]

@using DiarioMagna.Components.Shared

@inject NavigationManager Navigation
@inject LayoutHeaderState HeaderState

<PageHeader Icon="bi bi-speedometer2"
            Title="Panel de administración"
            Description="Accesos rápidos a las secciones clave del sistema" />

<section class="admin-list-section">
    <div class="container">
        <div class="row g-3">
            <div class="col-12 col-md-4">
                <div class="card shadow-sm border-0 admin-article-card">
                    <div class="card-body">
                        <h5 class="card-title">Solicitudes de artículos</h5>
                        <p class="small text-muted mb-3">
                            Revisa, aprueba o rechaza los artículos enviados por secretaría.
                        </p>
                        <button class="btn btn-primary btn-sm d-inline-flex align-items-center" @onclick="GoSolicitudes">
                            <i class="bi bi-journal-check me-1"></i>
                            Ir al panel de solicitudes
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card shadow-sm border-0 admin-article-card">
                    <div class="card-body">
                        <h5 class="card-title">Panel de envíos</h5>
                        <p class="small text-muted mb-3">
                            Selecciona los noticieros a los que se enviarán los artículos aprobados.
                        </p>
                        <button class="btn btn-primary btn-sm d-inline-flex align-items-center" @onclick="GoEnvios">
                            <i class="bi bi-send-check me-1"></i>
                            Ir al panel de envíos
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card shadow-sm border-0 admin-article-card">
                    <div class="card-body">
                        <h5 class="card-title">Noticieros</h5>
                        <p class="small text-muted mb-3">
                            Administra los noticieros disponibles para publicación.
                        </p>
                        <button class="btn btn-primary btn-sm d-inline-flex align-items-center" @onclick="GoNoticieros">
                            <i class="bi bi-broadcast-pin me-1"></i>
                            Ir a noticieros
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    protected override void OnInitialized()
    {
        HeaderState.Set("bi bi-speedometer2", "Panel de administración", "Accesos rápidos a las secciones clave del sistema");
    }

    private void GoSolicitudes()
    {
        Navigation.NavigateTo("/admin/solicitudes");
    }

    private void GoEnvios()
    {
        Navigation.NavigateTo("/admin/envios");
    }

    private void GoNoticieros()
    {
        Navigation.NavigateTo("/admin/noticieros");
    }
}
