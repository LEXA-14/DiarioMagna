@page "/admin"
@rendermode InteractiveServer
@* @attribute [Authorize(Roles = "Administrador")] *@
@inject NavigationManager Navigation

<section class="admin-hero">
    <div class="container">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="d-flex align-items-center">
                <div class="admin-hero-icon me-3">
                    <span class="fs-2">⚙️</span>
                </div>
                <div>
                    <h1 class="h4 mb-1 text-white">Panel de administración</h1>
                    <div class="small text-white-50">Accesos rápidos a las secciones del sistema</div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="admin-list-section">
    <div class="container">
        <div class="row g-3">
            <div class="col-12 col-md-4">
                <div class="card shadow-sm border-0 admin-article-card">
                    <div class="card-body">
                        <h5 class="card-title">Solicitudes de artículos</h5>
                       
                        <button class="btn btn-primary btn-sm" @onclick="GoSolicitudes">
                            Ir al panel de solicitudes
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card shadow-sm border-0 admin-article-card">
                    <div class="card-body">
                        <h5 class="card-title">Panel de envíos</h5>
                        <p class="small text-muted">
                            Seleccionar los noticieros a los que se enviarán los artículos aprobados.
                        </p>
                        <button class="btn btn-primary btn-sm" @onclick="GoEnvios">
                            Ir al panel de envíos
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card shadow-sm border-0 admin-article-card">
                    <div class="card-body">
                        <h5 class="card-title">Noticieros</h5>
                        <p class="small text-muted">
                            Administrar los noticieros disponibles para publicación.
                        </p>
                        <button class="btn btn-primary btn-sm" @onclick="GoNoticieros">
                            Ir a noticieros
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    private void GoSolicitudes()
    {
        Navigation.NavigateTo("/admin/solicitudes");
    }

    private void GoEnvios()
    {
        Navigation.NavigateTo("/admin/envios");
    }

    private void GoNoticieros()
    {
        Navigation.NavigateTo("/admin/noticieros");
    }
}
