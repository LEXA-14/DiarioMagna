@page "/mis-articulos"
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Secretaria,RelacionesPublicas,EncargadoSistema,Administrador")]

@using DiarioMagna.Data
@using DiarioMagna.Domain.Models
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Authorization
@using DiarioMagna.Components.Shared

@inject ApplicationDbContext Db
@inject NavigationManager Navigation
@inject LayoutHeaderState HeaderState

<PageHeader Icon="bi bi-journal-text"
            Title="Mis artículos"
            Description="Listado de noticias registradas por el usuario actual" />

<section class="admin-list-section">
    <div class="container">

        @if (_loading)
        {
            <div class="text-center py-5">
                <div class="spinner-border"></div>
            </div>
        }
        else if (!_items.Any())
        {
            <div class="alert alert-info mt-3 admin-article-card">
                Aún no has registrado artículos.
            </div>
        }
        else
        {
            <div class="card shadow-sm border-0 admin-article-card mb-3">
                <div class="card-body">
                    <div class="row g-3 align-items-end">
                        <div class="col-12 col-md-6">
                            <label class="form-label small mb-1">Buscar por título</label>
                            <input class="form-control form-control-sm"
                                   placeholder="Ejemplo: Inauguración, evento, anuncio..."
                                   @bind="_search" />
                        </div>

                        <div class="col-12 col-md-3">
                            <label class="form-label small mb-1">Estado</label>
                            <select class="form-select form-select-sm" @bind="_statusFilter">
                                <option value="Todos">Todos</option>
                                <option value="Pendiente">Pendiente de revisión</option>
                                <option value="Aprobado">Aprobado</option>
                                <option value="Rechazado">Rechazado</option>
                                <option value="Enviado">Enviado</option>
                            </select>
                        </div>

                        <div class="col-12 col-md-3 text-md-end">
                            <div class="small text-muted">
                                Artículos encontrados: @FilteredItems.Count()
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-3">
                @foreach (var item in FilteredItems)
                {
                    <div class="col-12">
                        <div class="card shadow-sm border-0 admin-article-card">
                            <div class="card-body">
                                <div class="d-flex flex-column flex-md-row gap-3">
                                    <div class="misart-thumb">
                                        @if (!string.IsNullOrWhiteSpace(item.AttachmentPath))
                                        {
                                            <img src="@item.AttachmentPath"
                                                 class="img-fluid rounded"
                                                 style="max-height:120px;object-fit:cover;min-width:170px;"
                                                 alt="Imagen del artículo" />
                                        }
                                        else
                                        {
                                            <div class="d-flex align-items-center justify-content-center bg-light rounded"
                                                 style="height:120px;min-width:170px;">
                                                <span class="text-muted small">Sin imagen</span>
                                            </div>
                                        }
                                    </div>

                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <h5 class="mb-1">@item.Title</h5>
                                                <div class="small text-muted">
                                                    @item.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                                </div>
                                                <div class="small text-muted">
                                                    Categoría: @item.CategoryName
                                                    @if (!string.IsNullOrWhiteSpace(item.PlanName))
                                                    {
                                                        <span> · Plan: @item.PlanName</span>
                                                    }
                                                </div>
                                            </div>

                                            <div>
                                                <span class="badge @GetStatusBadgeClass(item.Status)">
                                                    @item.Status
                                                </span>
                                            </div>
                                        </div>

                                        <div class="small text-muted mb-2">
                                            @ShortContent(item.Content)
                                        </div>

                                        <div class="d-flex flex-wrap justify-content-end gap-2 mt-2">
                                            <button class="btn btn-outline-secondary btn-sm"
                                                    @onclick="() => ViewArticle(item.Id)">
                                                <i class="bi bi-eye me-1"></i>
                                                Ver
                                            </button>

                                            <button class="btn btn-outline-primary btn-sm"
                                                    @onclick="() => EditArticle(item.Id)">
                                                <i class="bi bi-pencil-square me-1"></i>
                                                Editar
                                            </button>
                                        </div>

                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>
        }

    </div>
</section>

@code {
    [CascadingParameter] private Task<AuthenticationState> AuthStateTask { get; set; } = default!;

    private bool _loading = true;
    private string _search = "";
    private string _statusFilter = "Todos";

    private List<ArticleItem> _items = new();

    private IEnumerable<ArticleItem> FilteredItems =>
        GetFilteredItems();

    protected override async Task OnInitializedAsync()
    {
        HeaderState.Set("bi bi-journal-text", "Mis artículos", "Listado de noticias registradas por el usuario actual");

        var authState = await AuthStateTask;
        var user = authState.User;
        var email = user.Identity?.Name ?? "";

        var list = await Db.Articles
            .Include(a => a.Category)
            .Include(a => a.Plan)
            .Where(a => a.AuthorEmail == email)
            .OrderByDescending(a => a.CreatedAt)
            .ToListAsync();

        _items = list.Select(a => new ArticleItem
        {
            Id = a.Id,
            Title = a.Title,
            Content = a.Content,
            CreatedAt = a.CreatedAt,
            CategoryName = a.Category?.Name ?? "General",
            PlanName = a.Plan?.Name,
            Status = a.Status,
            AttachmentPath = a.AttachmentPath
        }).ToList();

        _loading = false;
    }

    private IEnumerable<ArticleItem> GetFilteredItems()
    {
        IEnumerable<ArticleItem> query = _items;

        if (!string.IsNullOrWhiteSpace(_search))
        {
            var s = _search.Trim().ToLowerInvariant();
            query = query.Where(i => i.Title.ToLowerInvariant().Contains(s));
        }

        if (_statusFilter != "Todos" &&
            Enum.TryParse<ArticleStatus>(_statusFilter, out var status))
        {
            query = query.Where(i => i.Status == status);
        }

        return query;
    }

    private string ShortContent(string content)
    {
        if (string.IsNullOrWhiteSpace(content))
            return "";

        var text = content.Trim();
        if (text.Length <= 160)
            return text;

        return text.Substring(0, 160) + "...";
    }

    private void ViewArticle(int id)
    {
        Navigation.NavigateTo($"/articles/details/{id}");
    }

    private void EditArticle(int id)
    {
        Navigation.NavigateTo($"/articles/edit/{id}");
    }

    private string GetStatusBadgeClass(ArticleStatus status)
    {
        return status switch
        {
            ArticleStatus.Aprobado => "bg-success",
            ArticleStatus.Rechazado => "bg-danger",
            ArticleStatus.Pendiente => "bg-warning text-dark",
            ArticleStatus.Enviado => "bg-info",
            _ => "bg-secondary"
        };
    }

    private sealed class ArticleItem
    {
        public int Id { get; set; }
        public string Title { get; set; } = "";
        public string Content { get; set; } = "";
        public DateTime CreatedAt { get; set; }
        public string CategoryName { get; set; } = "";
        public string? PlanName { get; set; }
        public ArticleStatus Status { get; set; }
        public string? AttachmentPath { get; set; }
    }
}
