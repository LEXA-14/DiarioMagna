@page "/Account/ResetPasswordConfirmation"

@inject NavigationManager NavigationManager

<PageTitle>Contraseña restablecida</PageTitle>

<div class="auth-page">
    <div class="auth-card fade-in">
        <div class="auth-icon">✅</div>

        <h1 class="auth-title">Contraseña actualizada</h1>
        <p class="auth-subtitle">
            Tu contraseña se ha restablecido correctamente.
        </p>

        <button type="button"
                class="btn btn-primary auth-submit w-100"
                @onclick="IrALogin">
            Ir a iniciar sesión
        </button>
    </div>

    <div class="auth-links fade-in-delayed">
        <span class="small">
            Volver al inicio
            <a href="/" class="link-light">Ir al portal</a>
        </span>
    </div>
</div>

@code {
    private void IrALogin()
    {
        NavigationManager.NavigateTo("/Account/Login");
    }
}
