@namespace DiarioMagna.Components.Shared

<div class="page-header-wrapper mb-4">
    <div class="page-header-content d-flex justify-content-between align-items-start flex-wrap">
        <div class="d-flex align-items-center mb-3 mb-md-0">
            @if (!string.IsNullOrWhiteSpace(Icon))
            {
                <div class="page-header-icon d-flex align-items-center justify-content-center me-3">
                    <i class="@Icon"></i>
                </div>
            }

            <div class="page-header-text">
                <h1 class="page-header-title">@Title</h1>

                @if (!string.IsNullOrWhiteSpace(Description))
                {
                    <p class="page-header-description">@Description</p>
                }
            </div>
        </div>
        <div class="page-header-actions">
            @if (RightContent is not null)
            {
                @RightContent
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public string Icon { get; set; } = "";
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Description { get; set; } = "";
    [Parameter] public RenderFragment? RightContent { get; set; }
}
